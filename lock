  <script>
    setTimeout(function() {
      var lockedLock = document.getElementById('locked-lock');
      var unlockedLock = document.getElementById('unlocked-lock');
      var profileText = document.getElementById('profile-text');
      
      lockedLock.style.display = 'none';
      unlockedLock.style.display = 'block';

      setTimeout(function() {
        unlockedLock.style.display = 'none';
        profileText.style.opacity = 1;
      }, 1500);
    }, 1500);
